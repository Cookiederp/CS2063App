<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCDDBC">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addtasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="291dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="133dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasksview"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/tasksview"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="545dp"
        android:background="#b8d8ba"
        android:text="Task1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>